<% if thing.photo_link.nil? || thing.photo_link.strip == "" %>
  <div class='selection_card' style="background-image: url('https://unsplash.it/175/150/?random');">
<% else %>
  <div class='selection_card' style="background-image: url('<%= thing.photo_link %>');">
<% end %>
  <h5><%= thing.name.capitalize %></h5>
  <%= link_to "", thing.link, target: "_blank" %>
  <% if thing.is_favorite?(current_user) %>
    <i class="fa fa-star" style="color:orange; position: absolute; bottom: 5px; right: 5px;"></i>
  <% end %>
</div>
