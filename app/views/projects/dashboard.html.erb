<div class="thank-container" style="background-image: linear-gradient(0deg, rgba(50,50,50,0.6) 0%, rgba(50,50,50,0.6) 0%), url('<%= image_path "background.jpg"%>');">
  <div class="thank-container-content">
    <% if @project.get_participant_votes(current_user) == 24 %>
      <h2 class="text-center">Thank you for voting!</h2>
      <p class="text-center">You will be informed once all participants have voted! We hope you enjoyed casting your votes for this trip! You can now check the current status of all votes and leave your comments!</p>
    <% elsif @project.get_participant_votes(current_user) > 0 %>
      <h2 class="text-center">Oops, it looks like you did not cast all your votes!</h2>
      <%= link_to "Complete votes!", project_city_path(@project, @city1), class: "btn btn-primary brand-color" %>
    <% else %>
      <h2 class="text-center">Welcome to <%= @project.name.capitalize %>.</h2>
      <%= link_to "Vote now for this trip!", project_city_path(@project, @city1), class: "btn btn-primary brand-color" %>
    <% end %>
  </div>
</div>
<div class="dashboard-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="dashboard-city-box">
          <div class="row">
            <div class="col-xs-12 text-center">
              <h3><%= @city1.name.capitalize %></h3>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <h5 style="margin-left:20px;">Restaurants</h5>
              <%= render "results-card", things: @city1_restaurants %>
            </div>
            <div class="col-xs-6">
              <h5 style="margin-left:20px;">Accommodations</h5>
              <%= render "results-card", things: @city1_accommodations %>
            </div>
            <div class="col-xs-6">
              <h5 style="margin-left:20px;">Activities</h5>
              <%= render "results-card", things: @city1_activities %>
            </div>
            <div class="col-xs-6">
              <h5 style="margin-left:20px;">Bars</h5>
              <%= render "results-card", things: @city1_bars %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="dashboard-city-box">
          <div class="row">
            <div class="col-xs-12 text-center">
              <h3><%= @city2.name.capitalize %></h3>
            </div>
          </div>
            <div class="row">
              <div class="col-xs-6">
                <h5 style="margin-left:20px;">Restaurants</h5>
                <%= render "results-card", things: @city2_restaurants %>
              </div>
              <div class="col-xs-6">
                <h5 style="margin-left:20px;">Accommodations</h5>
                <%= render "results-card", things: @city2_accommodations %>
              </div>
              <div class="col-xs-6">
                <h5 style="margin-left:20px;">Activities</h5>
                <%= render "results-card", things: @city2_activities %>
              </div>
              <div class="col-xs-6">
                <h5 style="margin-left:20px;">Bars</h5>
                <%= render "results-card", things: @city2_bars %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="messenger-container">
  <div class="message-box">
    <h2 class="text-center">Discuss the trip with your buddies!</h2>
    <div class="messages" id="messages">
      <% @project.messages.each do |message| %>
        <%= render "message", message: message %>
      <% end %>
    </div>
    <div class="message-form">
      <%= render "new_message_form", project: @project %>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <script>
    var scroll_distance = $("#messages>:last-child").position().top;
    $("#messages").scrollTop(scroll_distance);
  </script>
<% end %>
