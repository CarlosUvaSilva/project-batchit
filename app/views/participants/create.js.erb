<% if @participant.errors.any? %>
  // Render new review form with errors
  $('#new-participant-form').html('<%= j render "participants/new_participant_form", participant: @participant %>')
<% else %>
  // Add it to the DOM, at the end of the existing reviews. It's still hidden.
  var new_participant = $('<%= j render "shared/participant_card", participant: @participant %>').hide();
  $('#participant-box').append(new_participant);
  new_participant.slideDown();
  $('#email-input-participant').val("");
<% end %>
