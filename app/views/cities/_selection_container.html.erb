      <div class="col-xs-4" id="activity<%=i.to_s%>">
        <div class="empty_selection">
          <p>Add an activity</p>
        </div>
      </div>
      <% i = i+1  %>
    <% end %>
  </div>
  <div class="selection-line"></div>

  <div class="selections" id="bars_selection">
