        <%= render "shared/selection_card", thing: thing %>
      </div>
      <% i = i+1  %>
    <% end %>
    <% (3 - @city.accommodations.size).times do %>
      <div class="col-xs-4" id="accommodation<%=i.to_s%>">
        <div class="empty_selection">
          <p>Add an accommodation</p>
        </div>
      </div>
      <% i = i+1  %>
    <% end %>
  </div>
  <div class="selection-line"></div>

  <div class="selections" id="activities_selection">
    <div class="col-xs-12"><h3>Activities</h3></div>
    <% i = 1 %>
    <% @city.activities.each do |thing|  %>
      <div class="col-xs-4" id="activity<%=i.to_s%>">
        <%= render "shared/selection_card", thing: thing %>
      </div>
      <% i = i+1  %>
    <% end %>
