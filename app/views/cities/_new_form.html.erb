<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= simple_form_for @city, method: "post", url: project_cities_path(@project) do |f| %>
        <div class="form-group">
          <%= f.input :name, label: "Please enter the city's name: ", input_html: {class: "form-control"} %>
        </div>
        <br>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
