<div class="message">
  <% if message.user.email == current_user.email %>
    <div class="message-currentuser">
    <!-- we want to render the user picture as well  -->
      <h5> Me </h5>
    </div>
    <div class="message-currentcontent">
      <%= message.content %>
    </div>
 <% else %>
   <div class="message-user">
      <h5> <%= message.user.email %> </h5>
    </div>
    <div class="message-content">
      <%= message.content %>
    </div>

    <% end %>
</div>
